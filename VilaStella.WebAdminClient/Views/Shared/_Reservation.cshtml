@model VilaStella.WebAdminClient.Areas.Admin.ViewModels.ReservationsInputModel

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Резервиране</h4>
        </div>
        <div class="modal-body">
            @using (Ajax.BeginForm("Add", "Home", new AjaxOptions
            {
                InsertionMode = InsertionMode.Replace,
                HttpMethod = "POST",
                LoadingElementId
            }, new { @class = "form-horizontal reservation-form", id = "MainForm" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()

                <div class="form-group">
                    @Html.LabelFor(x => x.FirstName, "Име", new { @class = "control-label col-xs-3" })
                    <div class="col-xs-8">
                        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control input-small" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.LastName, "Фамилия", new { @class = "control-label col-xs-3" })
                    <div class="col-xs-8">
                        @Html.TextBoxFor(x => x.LastName, new { @class = "form-control input-small" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.Email, "E-Mail", new { @class = "control-label col-xs-3" })
                    <div class="col-xs-8">
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control input-small" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.Phone, "Телефон", new { @class = "control-label col-xs-3" })
                    <div class="col-xs-8">
                        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control input-small" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.From, "От", new { @class = "control-label col-xs-3" })
                    <div class="col-xs-8">
                        @Html.TextBoxFor(x => x.From, "{0:dd.M.yyyy}", new { @class = "form-control ff-rounded" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.To, "До", new { @class = "control-label col-xs-3" })
                    <div class="col-xs-8">
                        @Html.TextBoxFor(x => x.To, "{0:dd.M.yyyy}", new { @class = "form-control ff-rounded" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.PartySize, "Брой хора", new { @class = "control-label col-xs-3" })
                    <div class="col-xs-8">
                        <select name="PartySize" id="PartySize" class="form-control">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            <option value="6">6</option>
                        </select>
                    </div>
                </div>

                <div class="reservation-footer"><h6>Моля въведете валиден Email и телефон за връзка</h6></div>

                <hr />
                <h4 class="modal-title">Плащане</h4>
                <hr />

                <div class="form-group text-center">
                    <label class="btn btn-primary payment-button" for="ByHand">В брой</label>
                    <input type="radio" name="payment" id="ByHand" required />
                </div>
                <div class="form-group text-center">
                    <label class="btn btn-primary payment-button" for="BankTransaction">Банков превод</label>
                    <input type="radio" name="payment" id="BankTransaction" />
                </div>
                <div class="form-group text-center">
                    <label class="btn btn-primary payment-button" for="PayPal">Онлайн</label>
                    <input type="radio" name="payment" id="PayPal" />
                </div>

                @Html.EditorFor(x => x.PaymentMethod, "StandardEnum")
            }

        </div>
        <div class="modal-footer text-center">
            <input type="submit" class="btn btn-default submit-form" value="Резервирай" />
        </div>
    </div>
</div>