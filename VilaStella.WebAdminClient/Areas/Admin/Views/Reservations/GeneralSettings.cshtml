@model VilaStella.WebAdminClient.Areas.Admin.ViewModels.SettingsOutputModel

@{
    ViewBag.Title = "General Settings";
}

<h2>General Settings</h2>

@using (Html.BeginForm("GeneralSettings", "Reservations", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(x => x.PricePerNight, "Цена за вечер", new { @class = "col-md-4 control-label" })

        <div class="col-md-5">
            @Html.TextBoxFor(x => x.PricePerNight, new { @class = "form-control input-xs" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.AreReservationsOpen, "Оворени резервации", new { @class = "col-md-4 control-label" })

        <div class="col-md-5">
            <div class="checkbox col-md-5">
                @Html.CheckBoxFor(x => x.AreReservationsOpen, new { @class = "" })
            </div>
        </div>
    </div>

    <div class="form-group text-center">
            <input type="submit" value="Промени" class="btn btn-primary" />
    </div>
}