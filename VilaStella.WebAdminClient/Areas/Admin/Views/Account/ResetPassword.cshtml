@model VilaStella.WebAdminClient.Models.ResetPasswordViewModel

@{
    ViewBag.Title = "Reset password";
}

<div class="modal fade" id="modalWindow" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" style="position: absolute; left: 95%;" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title text-center" id="myModalLabel">Забравена Парола</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { id = "modalForm", @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()

                    <div>
                        <p class="text-center">Моля, въведете новата си парола в следните полета:</p>
                    </div>

                    @Html.HiddenFor(m => m.Email)
                    @Html.HiddenFor(m => m.Code)

                    <div class="form-group">
                        @Html.LabelFor(x => x.Password, "Нова Парола", new { @class = "col-md-4 control-label" })

                        <div class="col-md-5">
                            @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control inpud-md" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.ConfirmPassword, "Потвърдете Паролата", new { @class = "col-md-4 control-label" })

                        <div class="col-md-5">
                            @Html.EditorFor(x => x.ConfirmPassword, new { htmlAttributes = new { @class = "form-control inpud-md" } })
                        </div>
                    </div>

                    <div class="row text-center">
                        <button class="btn btn-primary submit-button" data-loading-text="Изпрати">Изпрати</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/App/Shared/initialize-modal.js"></script>
    <script src="~/Scripts/App/Shared/validate-modal.js"></script>
}