@model VilaStella.WebAdminClient.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<!-- Modal -->
<div class="modal fade" id="modalWindow" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" style="position: absolute; left: 95%;" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title text-center" id="myModalLabel">Вход</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "modalForm", @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.LabelFor(x => x.Email, "Email", new { @class = "col-md-4 control-label" })

                        <div class="col-md-5">
                            @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control input-md" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.Password, "Парола", new { @class = "col-md-4 control-label" })

                        <div class="col-md-5">
                            @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control input-md" } })
                            <div>@Html.ActionLink("Забравена парола?", "ForgottenPassword", "Account")</div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-5">
                            <div class="checkbox">
                                <label>
                                    @Html.EditorFor(x => x.RememberMe) Запомни ме?
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="row text-center">
                        <button class="btn btn-primary submit-button" data-loading-text="Влизане">Влез</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/App/Shared/initialize-modal.js"></script>
    <script src="~/Scripts/App/Shared/validate-modal.js"></script>
}