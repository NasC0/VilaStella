@model VilaStella.WebAdminClient.Models.ReservationsInputModel

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Резервиране</h4>
        </div>
        <div class="modal-body">
            <div class="main-modal-body modal-active">
                @using (Ajax.BeginForm("Add", "Home", new AjaxOptions
            {
                InsertionMode = InsertionMode.Replace,
                HttpMethod = "POST",
                OnBegin = "onReservationBegin",
                OnSuccess = "onReservationSucess",
                OnFailure = "onReservationFailure"
            }, new { @class = "form-horizontal reservation-form", id = "MainForm" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="server-errors">

                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.FirstName, "Име", new { @class = "control-label col-xs-3" })
                        <div class="col-xs-8">
                            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control input-small" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.LastName, "Фамилия", new { @class = "control-label col-xs-3" })
                        <div class="col-xs-8">
                            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control input-small" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.Email, "E-Mail", new { @class = "control-label col-xs-3" })
                        <div class="col-xs-8">
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control input-small" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.Phone, "Телефон", new { @class = "control-label col-xs-3" })
                        <div class="col-xs-8">
                            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control input-small" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.PartySize, "Брой хора", new { @class = "control-label col-xs-3" })
                        <div class="col-xs-8">
                            <select name="PartySize" id="PartySize" class="form-control">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.From, "От", new { @class = "control-label col-xs-3" })
                        <div class="col-xs-8">
                            @Html.TextBoxFor(x => x.From, "{0:dd.M.yyyy}", new { @class = "form-control ff-rounded" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.To, "До", new { @class = "control-label col-xs-3" })
                        <div class="col-xs-8">
                            @Html.TextBoxFor(x => x.To, "{0:dd.M.yyyy}", new { @class = "form-control ff-rounded" })
                        </div>
                    </div>

                    <div class="reservation-footer">
                        <h5>Капаро: <span data-bind="text: Capparo"></span> лв.</h5>
                        <h5>Пълна цена: <span data-bind="text: FullPrice"></span> лв.</h5>
                        <h6>Моля въведете валиден Email и телефон за връзка</h6>
                    </div>

                    <hr />
                    <h4 class="modal-title">Плащане</h4>
                    <hr />

                    <div class="form-group text-center payment-parent">
                        <label class="btn btn-primary payment-button" for="ByHand">В брой</label>
                        <input type="radio" name="payment" id="ByHand" required />
                        <a class="glyphicon glyphicon-info-sign activate-popover" href="javascript:void(0);" data-trigger="focus" data-container="body" data-toggle="popover" data-placement="top" data-content="Предаване на капарото или пълната сума на ръка. Плащането трябва да се извърши до 48 часа след заявката за резервация."></a>
                    </div>
                    <div class="form-group text-center payment-parent">
                        <label class="btn btn-primary payment-button" for="BankTransaction">Банков превод</label>
                        <input type="radio" name="payment" id="BankTransaction" />
                        <a class="glyphicon glyphicon-info-sign activate-popover" href="javascript:void(0);" data-trigger="focus" data-container="body" data-toggle="popover" data-placement="top" data-content="Предаване на капарото по банков път - чрез превод от клон на банка или онлайн банкиране. Плащането трябва да се извърши до 48 часа след заявката за резервация."></a>
                    </div>

                    @Html.EditorFor(x => x.PaymentMethod, "StandardEnum")
                }
            </div>
            <div class="modal-hidden reservation-processing">
                <h4>Моля изчакайте, вашата резервация се обработва.</h4>
                <div class="progress">
                    <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="100" aria-valuemax="100" style="width: 100%">
                    </div>
                </div>
            </div>

            <div class="modal-hidden reservation-failure">
                <h4>Възникна проблем при регистрирането на Вашата резервация, моля презаредете страницата и опитайте отново.</h4>
            </div>

            <div class="modal-hidden reservation-success">
                <h4>Вашата резервация беше регистрирана успешно.</h4>
                <h5>Ще получите e-mail на адреса, който сте посочили, с информация за резервацията Ви и инструкции за плащане.</h5>
            </div>
        </div>
        <div class="modal-footer text-center">
            <input type="submit" class="btn btn-default submit-form" value="Резервирай" />
        </div>
    </div>
</div>